{%  extends 'base.html.twig' %}

{% block metaTitle %}
    Les catégories du journal
{% endblock metaTitle %}

{% block main %}
    <div class="container">
        {% for categorie in list %}
            <div class="row">
                <h1>
                    <a href="{{ path('categorieShow', {'id' : categorie.id}) }}">{{ categorie.title }}</a>
                </h1>
                <h2>
                    {{ categorie.description }}
                </h2>
            </div>
        {% endfor %}
    </div>

{% endblock main %}

{% block footer %}
    <p>
        Vous avez lu les catégories de la mort qui tue du journal de la Piscine
    </p>
{% endblock footer %}
